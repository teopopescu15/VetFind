{
  "name": "sma-new",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "expo start --port 8082",
    "start:tunnel": "expo start --tunnel --port 8082",
    "start:lan": "EXPO_DEVTOOLS_LISTEN_ADDRESS=0.0.0.0:8082 expo start --lan --port 8082",
    "android": "expo start --android --port 8082",
    "ios": "expo start --ios --port 8082",
    "web": "expo start --web --port 8082",
    "backend": "cd backend && npm run dev",
    "dev": "concurrently \"npm run backend\" \"npm run start:lan\"",
    "dev:tunnel": "concurrently \"npm run backend\" \"npm run start:tunnel\"",
    "clean-start": "expo start -c --port 8082",
    "mobile": "EXPO_DEVTOOLS_LISTEN_ADDRESS=0.0.0.0:8082 expo start --tunnel --port 8082",
    "check-ip": "hostname -I | awk '{print $1}'",
    "test-connection": "curl -I http://localhost:5000/health && echo '✅ Backend is running' || echo '❌ Backend is not running'"
  },
  "dependencies": {
    "@expo/metro-runtime": "~6.1.2",
    "@expo/vector-icons": "^15.0.3",
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-native-community/datetimepicker": "^8.4.4",
    "@react-native-community/masked-view": "^0.1.11",
    "@react-navigation/native": "^7.1.20",
    "@react-navigation/stack": "^7.6.4",
    "expo": "~54.0.24",
    "expo-image-picker": "^17.0.8",
    "expo-linear-gradient": "~15.0.7",
    "expo-location": "^19.0.7",
    "expo-status-bar": "~3.0.8",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-linear-gradient": "^2.8.3",
    "react-native-paper": "^5.14.5",
    "react-native-safe-area-context": "^5.6.2",
    "react-native-screens": "~4.16.0",
    "react-native-vector-icons": "^10.3.0",
    "react-native-web": "^0.21.0"
  },
  "devDependencies": {
    "@expo/ngrok": "^4.1.3",
    "@types/react": "~19.1.0",
    "concurrently": "^9.2.1",
    "expo-mcp": "^0.1.15",
    "shadcn": "^3.5.0",
    "typescript": "~5.9.2"
  },
  "private": true
}
